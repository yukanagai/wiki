<body>
<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    </div>

  <div class="new-tag-form">
    <div class="tag-wrapper">
      <h2 class="header-text">Create a new tag:</h2>

      <div class="field">
        <%= f.text_field :name, class: 'input-box', placeholder: "Tag name" %>
      </div><br>

      <p> <%= f.submit :Submit, id:'submit-button' %> </p>

      <div id="actions">
        <p id="submit-button"><a href="/articles">Cancel</a></p>
      </div>
        
      <% end %>
    </div>
  </div>
</div>

</body>