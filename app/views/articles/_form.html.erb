<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div id="tags-form">
    Pick a tag: <%= f.collection_select :tag_id, Tag.all, :id, :name, { prompt: 'Choose a tag'} %>
  </div>

  <div class="field">
    Editting as: <%= current_user.first_name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
